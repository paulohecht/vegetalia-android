<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.PrimaryBlockButton" parent="AppTheme.BlockButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/inverse_text</item>
    </style>

    <style name="AppTheme.FacebookBlockButton" parent="AppTheme.BlockButton">
        <item name="android:backgroundTint">@color/facebook_button</item>
        <item name="android:drawableLeft">@drawable/ic_facebook</item>
        <item name="android:textColor">@color/inverse_text</item>
    </style>

    <style name="AppTheme.GoogleBlockButton" parent="AppTheme.BlockButton">
        <item name="android:backgroundTint">@color/google_button</item>
        <item name="android:drawableLeft">@drawable/ic_google</item>
        <item name="android:textColor">@color/inverse_text</item>
    </style>

</resources>